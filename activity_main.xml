<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="@drawable/background_project"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/Score"
            android:textSize="50dp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_stroke"
            />
    </RelativeLayout>
    <GridLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <GridLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            ></GridLayout>

        <TextView
            android:id="@+id/JS"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/JavaScript"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="27dp"/>
        <TextView
            android:id="@+id/PHP"
            android:text="@string/PHP"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <TextView
            android:id="@+id/Android"
            android:text="@string/Android"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
    </GridLayout>
    <GridLayout
        android:layout_weight="14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"

        android:rowCount="3"
        android:columnCount="3"
        android:padding="10dp">

        <!--Row 1 Buttons-->
        <Button
            android:id="@+id/C1Q1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="4"
            android:layout_columnWeight="4"
            android:background="@drawable/button_stroke"
            android:text="100"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:onClick="JSQ1"
            />
        <Button
            android:id="@+id/C2Q1"
            android:text="100"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="4"
            android:background="@drawable/button_stroke"
            android:onClick="PHPQ1"/>
        <Button
            android:id="@+id/C3Q1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="4"
            android:layout_columnWeight="4"
            android:background="@drawable/button_stroke"
            android:text="100"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:onClick="AndQ1"/>
        <!--Row 2 Buttons-->
        <Button
            android:id="@+id/C1Q2"
            android:text="200"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="4"
            android:background="@drawable/button_stroke"
            android:onClick="JSQ2"
            />
        <Button
            android:id="@+id/C2Q2"
            android:text="200"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="4"
            android:background="@drawable/button_stroke"
            android:onClick="PHPQ2"/>
        <Button
            android:id="@+id/C3Q2"
            android:text="200"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="4"
            android:background="@drawable/button_stroke"
            android:onClick="AndQ2"/>
        <!--Row 3 Buttons -->
        <Button
            android:id="@+id/C1Q3"
            android:text="300"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="4"
            android:background="@drawable/button_stroke"
            android:onClick="JSQ3"/>
        <Button
            android:id="@+id/C2Q3"
            android:text="300"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="4"
            android:background="@drawable/button_stroke"
            android:onClick="PHPQ3"/>
        <Button
            android:id="@+id/C3Q3"
            android:text="300"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="4"
            android:background="@drawable/button_stroke"
            android:onClick="AndQ3"/>
    </GridLayout>
</LinearLayout>